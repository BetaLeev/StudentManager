<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>我要发布</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <style>
    /*头部css*/
        body{
            padding: 0px;
            margin: 0px;
        }
        #header{
            top:30px;
            width:100%;height:35px;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: -webkit-box;
            display: flex;
            -webkit-flex-flow: row;
            flex-flow: row;
            flex-direction: row;
            justify-content: space-between;
            -webkit-box-pack:justify;
            background-color: white;
            border-bottom: 1px solid #DCDCDC;
        }
        #header .back,#header .title,#header .share{
            display: flex;
            display: -webkit-box;
            display: -webkit-flex;
            width:30%;
        }

        #header .back img{
            width:25px;
            height: 25px;
            margin-left: 10px;
            margin-top: 8px;

        }
        #header .title{
            width:30%;
            -webkit-box-pack:center;
            font-family:SourceHanSansSC;
            text-align: center; 
            font-weight:400; font-size:18px;
             color:rgb(16, 16, 16); font-style:normal;
            letter-spacing:1px; line-height:42px; text-decoration:none;
        }
         #header .title span{
            width: auto;
            margin:0 auto;
        }
    </style>
</head>
<body>
    <!-- 找驿站头部 -->
    <header id="header">
        <div class="back" tapmode onclick="api.closeWin()" >
            <img src="../image/findaddress/back.png"/>
        </div>
        <div class="title"><span>我要发布</span></div>
        <div class="share"></div>
    </header>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
    var header =  document.getElementById("#header");
    apiready = function(){
        $api.fixStatusBar(header);
        api.openFrame({
            name: 'recommend_house',
            url: 'modules/recommend_house_module.html',
            rect: {
                x: 0,
                y: 70,
                w: api.winWidth,
                h: api.winHeight-70
            },
            bounces: false,
            bgColor: 'rgba(0,0,0,0)',
            vScrollBarEnabled: true,
            hScrollBarEnabled: true,
            fixed:true,
        });
        
    };
</script>
</html>