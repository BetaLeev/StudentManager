<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>我的_Frame</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <style>
    body,html{
        width: 100%;
        margin: 0px;
        padding: 0px;
    }
    *{  
        margin: 0px;
        padding: 0px;
    }
    header {
        position: fixed;
        border-bottom: 1px solid #cdcdcd;
        z-index: 9999;
        width: 100%;
        top:20px;
        height: 116px;
        background-color: #ffffff;
        opacity: 1;
    }
    
    header .icon-panel {
        width: 100%;
        height: 100px;       
        text-align: center;
    }
    header .icon-panel .icon {
        box-sizing: border-box;
        margin-left: 20px;
        margin-top: 20px;
        width: 86px;
        height: 86px;
        border-radius: 86px;
        background-repeat: no-repeat;
        background-size: 86px 86px;
        background-position: center center;
    }
    
    .username {
        margin-top:-50px;
        height: 30px;
        margin-left: 20px;
        line-height: 30px;
        font-size: 19px;
        color: #708090;
        text-align: center;
    }
    
    
    </style>
</head>

<body>
    <header>
        <div class="icon-panel">
            <div id="icon" class="icon" onclick="fnpaizhao()"></div>
            <div id="username" class="username" tapmode onclick="phone_login()"></div>
        </div>  
    </header>
    
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
    apiready = function() {
        api.openFrame({
            name: 'my_module_frame',
            url: 'modules/my_module_frame.html',
            rect: {
                x: 0,
                y: 162,
                w: api.winWidth,
                h: api.frameHeight-137
            },
            bounces: false,
            bgColor: 'rgba(0,0,0,0)',
            vScrollBarEnabled: false,
            hScrollBarEnabled: false
        });
        var loginstatu = api.getPrefs({sync: true,key:'userloginstatu'});
        var phone_number = api.getPrefs({sync: true,key:'user_phone'})
        if(loginstatu){
            change_phone_login(phone_number)
            var imgpath = api.getPrefs({sync:true,key:phone_number.toString()});
            if(imgpath){
                change_userimg(imgpath)
            }else{
                change_userimg('../image/tx.png')
            }
        }else{
            change_phone_login('请登录');
            change_userimg('../image/tx.png')
        }

    };
    function change_userimg(imgpath){
        var obj_icon = document.getElementById("icon");
        if(imgpath!='../image/tx.png'){
            obj_icon.style.border="2px red solid"
        }else{
            obj_icon.style.border = "2px #8a8a8a solid"
        }
        obj_icon.style.backgroundImage="url('"+imgpath+"')"
    }
    function change_phone_login(text_value){
        var user_obj = document.getElementById("username");
        $api.text(user_obj,text_value)
    }
    // 点击登入按钮
    function phone_login(){
        var loginstatu = api.getPrefs({sync: true,key:'userloginstatu'});
        if(!loginstatu){
            api.openWin({
                name: 'login',
                url: 'login.html',
            });
        }
    }
/*这个函数调用拍照的模块*/
function fnpaizhao(){
    var loginstatu = api.getPrefs({sync: true,key:'userloginstatu'});
    var phone_number = api.getPrefs({sync: true,key:'user_phone'});
    if(loginstatu){
        api.actionSheet({
            cancelTitle: '取消',
            buttons: ['拍照','相册']
        }, function(ret, err){
            if( ret ){
                 if(ret.buttonIndex==1){
                    api.getPicture({
                        sourceType: 'camera',
                        encodingType: 'png',
                        mediaValue: 'pic',
                        destinationType: 'url',
                        allowEdit: true,
                        quality: 90,
                        groupName:'eraworkAlbum',
                        saveToPhotoAlbum: true
                    }, function(ret, err){ 
                        if(ret){
                            var imgpath = ret.data
                            if(imgpath.length){
                                api.openWin({
                                    name: 'clipImg_page',
                                    url: 'clipImg_page.html',
                                    pageParam: {
                                        imgpath:imgpath,
                                        phone_number:phone_number
                                    }
                                });
                            }else{
                                api.toast({
                                  msg : '请重新使用相机拍照',
                                  duration : 3000,
                                  location : 'middle'
                                });
                            }
                        }else{
                             alert(JSON.stringify(err));
                        }
                    });
                 }else if(ret.buttonIndex==2){
                    var UIAlbumBrowser = api.require('UIAlbumBrowser');
                    UIAlbumBrowser.open({
                        max: 1,
                        type:'image',
                        styles: {
                            bg: '#ffffff',
                            mark: {
                                icon: '',
                                position: 'bottom_left',
                                size: 20
                            },
                            nav: {
                                bg: 'rgba(255,255,255,1)',
                                titleColor: '#000000',
                                titleSize: 18,
                                cancelColor: '#000000',
                                cancelSize: 16,
                                finishColor: '#000000',
                                finishSize: 16
                            }
                        },
                        rotation: true
                    }, function(ret) {
                        if (ret) {
                           if(ret.list){
                            if(ret.list.length!=0){
                                api.openWin({
                                    name: 'clipImg_page',
                                    url: 'clipImg_page.html',
                                    pageParam: {
                                        imgpath:ret.list[0].path,
                                        phone_number:phone_number
                                    }
                                });
                            }
                           }
                        }
                    });
                 }
            }else{
                 alert( JSON.stringify( err ) );
            }
        });

    }
};


</script>

</html>
