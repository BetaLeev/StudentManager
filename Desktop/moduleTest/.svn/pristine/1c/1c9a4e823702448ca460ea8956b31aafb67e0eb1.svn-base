<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>时代专属红包</title>
    <link rel="stylesheet" type="text/css" href="../../css/api.css"/>
    <style>
        body{
            margin: 0;
            padding: 0;
            height: auto;
        }
        /*头部css*/
        #header{
            top:30px;
            width:99%;height:35px;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: -webkit-box;
            display: flex;
            -webkit-flex-flow: row;
            flex-flow: row;
            flex-direction: row;
            justify-content: space-between;
            -webkit-box-pack:justify;
            background-color: white;
            border-bottom: 1px solid #DCDCDC;
        }
        #header .back,#header .title,#header .share{
            width:auto;
            display: flex;
            display: -webkit-box;
            display: -webkit-flex;
        }
        #header .back{
            width:25px;
            height: 25px;
            margin-left: 10px;
            margin-top: 8px;

        }
        #header .title{
            -webkit-box-pack:center;
            font-family:SourceHanSansSC; 
            font-weight:400; font-size:18px;
            text-align: center;
             color:rgb(16, 16, 16); font-style:normal;
            letter-spacing:1px; line-height:42px; text-decoration:none;
        }
        #header .share{
            -webkit-box-pack:right;
            font-family:SourceHanSansSC;
            font-weight:400; font-size:18px;
            color:rgb(16, 16, 16); font-style:normal; 
            letter-spacing:1px; line-height:42px;
            text-decoration:none;
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <!-- 找地儿头部 -->
    <div id="header">
        <img class="back" src="../../image/findaddress/back.png" tapmode onclick="api.closeWin()" />
        <span class="title" id = "title"></span>
        <span class="share"></span>
    </div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript">
    var heaer = document.getElementById("header");
    var title = document.getElementById("title");
    var y_set;
    apiready = function(){
        title.innerHTML = api.pageParam.title;
        if(api.systemType=="ios"){
            y_set=80
        }else{
            y_set=65
        }
        $api.fixStatusBar(header);
        api.openFrame({
            name: 'detailepage_move_model',
            url: 'move_news_content_module.html',
            rect: {
                x: 0,
                y: y_set,
                w: api.winWidth,
                h: 'auto'
            },
            pageParam: {
                name: api.pageParam.name,
                filename:api.pageParam.filename
            },
            bounces: true,
            bgColor: 'rgba(0,0,0,0)',
            vScrollBarEnabled: true,
            hScrollBarEnabled: true
        });
    };
</script>
</html>