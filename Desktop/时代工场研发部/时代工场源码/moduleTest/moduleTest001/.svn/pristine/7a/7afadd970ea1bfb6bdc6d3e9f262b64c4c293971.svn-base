<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>空间推荐</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <style>
        body{
            margin: 0;
            padding: 0;
            height: auto;
        }
        /*头部css*/
        #header{
            top:30px;
            width:99%;height:35px;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: -webkit-box;
            display: flex;
            -webkit-flex-flow: row;
            flex-flow: row;
            flex-direction: row;
            justify-content: space-between;
            -webkit-box-pack:justify;
            background-color: white;
            border-bottom: 1px solid #DCDCDC;
        }
        #header .back,#header .title,#header .share{
            width:auto;
            display: flex;
            display: -webkit-box;
            display: -webkit-flex;
        }
        #header .back{
            width:25px;
            height: 25px;
            margin-left: 10px;
            margin-top: 8px;

        }
        #header .title{
            -webkit-box-pack:center;
            font-family:SourceHanSansSC; 
            font-weight:400; font-size:18px;
            text-align: center;
             color:rgb(16, 16, 16); font-style:normal;
            letter-spacing:1px; line-height:42px; text-decoration:none;
        }
        #header .share{
            -webkit-box-pack:right;
            font-family:SourceHanSansSC;
            font-weight:400; font-size:18px;
            color:rgb(16, 16, 16); font-style:normal; 
            letter-spacing:1px; line-height:42px;
            text-decoration:none;
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <!-- 找驿站头部 -->
    <header id="header">
        <img class="back" src="../image/findaddress/back.png" tapmode onclick="api.closeWin()"/>
        <span class="title">荐空间</span>
        <span class="share" tapmode onclick="showsharelist()">分享</span>
    </header>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
    var header =  document.getElementById("#header");
    apiready = function(){
        $api.fixStatusBar(header);
        api.openFrame({
            name: 'sdtuijianmodule',
            url: 'modules/sdtuijianmodule.html',
            rect: {
                x: 0,
                y: 70,
                w: api.winWidth,
                h: api.winHeight-155,
            },
            pageParam: {
                name: api.pageParam.name
            },
            bounces: false,
            bgColor: 'rgba(255,255,255,1)',
            vScrollBarEnabled: true,
            hScrollBarEnabled: true
        });
        var UIScrollPicture = api.require('UIScrollPicture');
        UIScrollPicture.open({
                    rect: {
                        x: 0,
                        y: api.winHeight*6/7+1,
                        w: api.winWidth,
                        h: api.winHeight / 7
                    },
            data: {
                paths: ["https://org.modao.cc/uploads4/images/3049/30492422/v2_pm6fa3.jpg","https://org.modao.cc/uploads4/images/3049/30492697/v2_pm6fm8.jpg","https://org.modao.cc/uploads4/images/3049/30492710/v2_pm6fn3.jpg"],
            },
            styles: {
                caption: {
                    height: 35,
                    color: '#E0FFFF',
                    size: 13,
                    bgColor: '#696969',
                    position: 'bottom'
                }
            },
            contentMode: 'scaleToFill',
            interval: 3,
            fixedOn: api.frameName,
            loop: true,
            fixed: false
        }, function(ret, err) {
                });
        
    };
    function showsharelist(){
        api.openFrame({
            name: 'animation_frame_share',
            url: 'modules/shareframemoudle.html',
            rect: {
                x: 0,
                y:0,
                w: api.winWidth,
                h: 'auto'
            },
            bounces: false,
            bgColor: 'rgba(0,0,0,0.1)',
            vScrollBarEnabled: false,
            hScrollBarEnabled: false
        });
    }
</script>
</html>